{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "resolveJsonModule": true,
    "types": ["vite/client"],
    "composite": true
  },

  "include": ["src", "vite-env.d.ts"],
  "exclude": [
    "node_modules",
    // â›” keep Vitest out of app build
    "src/vitest.setup.ts",
    "src/__tests__/**",
    "**/*.test.*",
    "**/*.spec.*",
    "vitest.config.*",
    "**/*.vitest.*"
  ]
}
